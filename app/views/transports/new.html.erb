      <%= form_for :transport, url: transports_path do |f| %>
        <fieldset>
          <h1 class="text-center">Sign Up!</h1>

          <div class="form-group">
            <label class="col-md-4 control-label" for="role">Air or land transport?</label>
            <div class="col-md-8">
              <%= f.select :role, [["Air", "Air"], ["Land", "Land"]], class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="hub">Main hub/ point of origin</label>
            <div class="col-md-8">
              <%= f.text_field :hub, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="range">Range</label>
            <div class="col-md-8">
              <%= f.text_field :range, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="capacity">Capacity</label>
            <div class="col-md-8">
              <%= f.text_field :capacity, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="password_confirmation">Confirm Password</label>
            <div class="col-md-8">
              <%= f.text_field :password_confirmation, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="role">What is your Role?</label>
            <div class="col-md-8">
              <%= f.select :role, [["Node", "Node"], ["Cordinator", "Cordinator"]], class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>